<%
title @page.title
meta_description @page.meta
%>

<%= content_for :header do %>
<h1><%= @page.title %></h1>
<% end %>

<%= copy @page.copy %>

<% unless @page.one_column? %>
  <% content_for :aside do %>
    <%= render "shared/promos", promos: @promos %>
  <% end %>
<% end %>

<% content_for :toolbar do %>
  | <a href="<%= edit_admin_page_path(@page) %>">Edit this page</a>
<% end %>