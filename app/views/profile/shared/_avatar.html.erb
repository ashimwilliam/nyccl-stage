<div class="col-xs-12">
  <div class="lheading">PICTURE</div>
  <span class="hint">Use the arrows to choose an avatar. This will appear beside any comments you make.
  </span>
</div>

<div class="form-group col-sm-6 col-xs-12">
  <div id="pCarousel" class="carousel slide" >
    <div class="carousel-inner">
     <% SystemAvatar.ordered.in_groups_of(2).each_with_index do |a, idx| %>
      <div class="item <%= 'active' if idx == 0 %>" id="<%= idx + 1%>">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-2"><a href="#"><%=image_tag a.first.image.thumb("150x150#").url, id: a.first.id, class: 'img-responsive' %></a>
          </div>
          <div class="col-xs-4"><a href="#"><%#= image_tag a.first.image.thumb("150x150#").url, id: a.last.id, class: 'img-responsive' %></a>
          </div>
        </div>
        <!--/row-->
      </div>
      <% end %>  
      <%= f.hidden_field :system_avatar_id, value: '', id: "selected_avatar" %>    
    </div>
    <a class="left carousel-control" href="#pCarousel" data-slide="prev">
      <i class="fa fa-caret-left" aria-hidden="true"></i>
    </a>
    <a class="right carousel-control" href="#pCarousel" data-slide="next">
      <i class="fa fa-caret-right" aria-hidden="true"></i>
    </a>
  </div>
</div>

<div class="col-sm-1 hidden-xs"><span class="or">OR</span></div>
<div class="form-group col-sm-5 imgupload col-xs-12">
  <label class="hidden-xs"> <!-- <hr> <span class="or"> OR </span> --></label>
  <span class="hint" id= "avator_image">Upload an image to display. Max size 500kb.</span>
   
  <div class="fileUpload btn btn-success">
    <span>Upload Image</span>
    <%= f.file_field :custom_avatar, title: "UPLOAD FILE", class: "imgupload", id: "custom_avatar" %>  
  </div>
 
</div>
<% content_for :js do %>
  <script type="text/javascript">
    $('.carousel-inner img').click(function() {
      var id = $(this).attr('id');
      $('.carousel-inner img').css('border', 'none');
      $(this).css('border', '2px solid green');
      $('#selected_avatar').attr('value', id);
      //$('#pCarousel').attr("interval", false);

    });

    $('#custom_avatar').change(function(){
      val = $(this).val();
      $('#avator_image').html(val)
    });
  </script>
<% end %>  