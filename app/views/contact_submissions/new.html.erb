<%
title @page.title
meta_description @page.meta
%>

<%= content_for :header do %>
<h1><%= @page.title %></h1>
<% end %>

<%= copy @page.copy %>

<%= form_for @contact_submission, html: { class: "default" } do |f| %>

  <%= render 'shared/errors', m: @contact_submission %>

  <p>
    <%= f.text_field :title, placeholder: "Program Title", required: "required" %>
    <%= f.text_field :name, placeholder: "Your Name", required: "required" %>
    <%= f.email_field :email, placeholder: "Email", required: "required" %>
    <%= f.text_area :message, placeholder: "Message", required: "required" %></p>

  <button class="green" type="submit">Submit</button>

<% end %>

<% unless @page.one_column? %>
  <% content_for :aside do %>
    <%= render "shared/promos", promos: @page.promos %>
  <% end %>
<% end %>

<% content_for :toolbar do %>
  | <a href="<%= edit_admin_page_path(@page) %>">Edit this page</a>
<% end %>
