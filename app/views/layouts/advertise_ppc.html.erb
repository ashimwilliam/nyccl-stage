<html class="no-js" lang="en">
  <head>
  <style>
  .newpopup div, .newpopup p {
    margin-bottom: 0px !important;
}
form.newpopup div input, form.newpopup textarea {
  margin-bottom:5px !important;
}

  </style>
 
    <%= render 'shared/head' %>
    <%= yield :more_head %>
  </head>
  <body<%= yield :body_id %><%= yield :body_class %>>
    <div id="head-wrap-top" class="visible-md visible-lg">
      <div class="container">
        <div id="top-sub-nav" >
         
        </div>
      </div>
    </div>
    <div class="navbar navbar-inverse" role="navigation" id="mainheader">
      <div class="container">
        <div class="navbar-header">
        
          <a class="navbar-brand" href="/"  id="logo" style="margin-bottom: 2%;"><%= image_tag 'logo.png', :class => "img-responsive" %></a>
        </div>
        <div class="collapse navbar-collapse navHeaderCollapse">
         
        </div>   
      </div>
    </div>


    <div id="content" class="clearfix">
      <% if notice %><p class="message notice"><%= notice.html_safe %></p><% end %>
      <% if alert %><p class="message alert"><%= alert.html_safe %></p><% end %>
      <article class="col-3">
        <%= yield %>
      </article>
    </div>
    <% 
     about = Page.where(:permalink => 'about').first 
     help = Page.where(:permalink => 'help').first
    %>

      <footer>
        <div class="container-fluid" id="footer">
          <div id="topfooter" class="row">
            <div class="container">
            <div class="row">
              <div class="about col-sm-4 col-xs-12">
                <h3><a href="/about">About NYC College Line</a></h3>
                <div class="desc">
                  NYC College Line will help you stay organized from exploration to graduation. The site was created by Graduate NYC!, CUNY, NYC DOE, and Goddard Riverside. <%= link_to 'More...', page_path(about) unless about.blank? %>
                </div>
              </div>
              <div class="contact col-sm-6 col-xs-12 ">
              <h3>Ask An Adviser</h3>
              <div class="desc">
                <%= form_for @guest_question, url: question_campaign_ppc_path, html: { class: "newpopup",:id => "aaa-popup" } do |f| %>
                <div class=" row ">
                  <div class="col-xs-12 col-sm-6 ">
                    <input type="email" required="required" name="guest_user[email]" placeholder="Your email address" value="<%= @guest_email %>">
                    
                  </div>
                  <div class=" col-xs-12 col-sm-6 ">               
                    <input type="text" required="required" name="guest_user[zipcode]" placeholder="ZIP code" value="<%= @guest_zipcode %>">
                  </div>
                </div>
                <div class=" row">  
                <div class=" col-xs-12 col-sm-6">            
                   <%= f.text_area :question, placeholder: "Question", required: "required" , rows: 2, style: "resize: none" %>

                </div>
                <div class="col-xs-12 col-sm-6">
                
                  <input class="button btn btn-primary ppc_btn_c" name="commit" type="submit" value="Send" style="width:38% !important;">
                </div>
                </div>
              <% end %>
              </div>
            </div>
            </div>
          </div>
        </div>
        
        <div id="midfooter" class="row">
          <div class="container">
            <div class="copyright">Â© Copyright 2016. All rights reserved.
              <a href="/terms-of-use">Terms of Use</a> &amp; <a href="/privacy-policy">Privacy Policy</a>
            </div>
          </div>
        </div>
                   
        <div id="bottomfooter" class="row">
          <div class="container footerimg">
            <div class="ftrlogo  col-sm-2 col-xs-6"><%=link_to image_tag("CUNY.jpg"), "http://www2.cuny.edu/" %></div>
            <div class="ftrlogo col-sm-2 col-xs-6"><%=link_to image_tag("NYC.jpg"), "http://schools.nyc.gov/default.htm" %></div>
            <div class="ftrlogo col-sm-4 col-xs-6"><%=link_to image_tag("graguate_nyc.jpg"), "http://www.graduatenyc.org/" %></div>
            <div class="ftrlogo col-sm-4 col-xs-6"><%= link_to image_tag("goddard.jpg"), "http://www.goddard.org/grcc/?" %></div>
          </div>
        </div> 
      </div>
    </footer>  
   
    <%#= render 'shared/javascripts' %>
    <%#= yield :js %>
    <%#= render 'shared/toolbar' %>
  </body>
</html>
