<%
posts = ForumThread.recent
if posts.any?
%>
<div class="block top">
  <h3>Recent Posts</h3>
  <ul>
    <% posts.each_with_index do |ft, idx| %>
    <li><span class="idx"><%= idx + 1%>.</span><a href="<%= forum_forum_thread_path(ft.forum, ft) %>"><%= ft.name %></a></li>
    <% end %>
  </ul>
</div>
<% end %>