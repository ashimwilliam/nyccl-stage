<%
posts = Resource.top_saved.active
if posts.any?
%>
<div class="block top">
  <h3>Top saved resources</h3>
  <ul>
    <% posts.each_with_index do |r, idx| %>
    <li><span class="idx"><%= idx + 1%>.</span><a href="<%= resource_path(r) %>"><%= r.name %></a></li>
    <% end %>
  </ul>
</div>
<% end %>