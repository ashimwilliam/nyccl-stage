<%= form_for current_user, url: registration_success_path(1), html: { class: "profile" } do |f| %>

<h4>My Profile</h4>

<div class="row">
  <%= render "profile/shared/avatar", f: f %>
</div>

<div class="row">
  <div class="form-group col-sm-6 col-xs-12">
    <%= render "profile/shared/audiences", f: f %>
    <%= render "profile/shared/boroughs", f: f %>
  </div>
</div>

<div class="actions">
  <%= link_to "Skip", registration_success_path(2), class: "button large muted" %>
  <button class="green large" type="submit">Next <i class="ico-right"></i></button>
</div>
<% end %>

<%= content_for :js do %>
  <%= javascript_include_tag 'libs/plupload/plupload.full', 'app/profile' %>
<% end %>