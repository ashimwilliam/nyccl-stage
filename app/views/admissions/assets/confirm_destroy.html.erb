<% title "Confirm Destroy " + @asset.title %>

<%= form_for :asset, url: admin_asset_path(@asset), html: { method: :delete } do |f| %>
  <h3>Are you sure you want to permanently destroy <%= @asset.title %>?</h3>
  <p>
    <%= link_to asset_thumb(@asset), edit_admin_asset_path(@asset) %>
  </p>
  <p>
    <%= button_tag "Destroy" %> or <%= link_to "cancel", admin_assets_path %>
  </p>
<% end %>