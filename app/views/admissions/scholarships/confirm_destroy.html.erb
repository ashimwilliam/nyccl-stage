<% title "Delete #{@scholarship.name}"%>

<%= form_for :scholarship, url: admin_scholarship_path(@scholarship), html: { method: :delete } do |f| %>
  <h3>Are you sure you want to permanently destroy <%= @scholarship.name %>?</h3>
  <p>
    <button type="submit">Destroy</button> or <%= link_to "cancel", admin_scholarships_path %>
  </p>
<% end %>