<% title "Delete #{@resource.name}"%>

<%= form_for :resource, url: admin_resource_path(@resource), html: { method: :delete } do |f| %>
  <h3>Are you sure you want to permanently destroy <%= @resource.name %>?</h3>
  <p>
    <button type="submit">Destroy</button> or <%= link_to "cancel", admin_resources_path %>
  </p>
<% end %>