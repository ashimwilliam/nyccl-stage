<% if @user_survey_report.present? %>
	<% title "Delete #{@user_survey_report.user.username}" %>

	<%= form_for @user_survey_report, url: delete_admin_survey_report_path(@user_survey_report), html: { method: :delete } do |f| %>
	    <h3>Are you sure you want to permanently destroy survey report for  <%= @user_survey_report.user.username %>?</h3>
	    <p>
	      <button type="submit">Destroy</button> or <%= link_to "cancel", report_admin_survey_report_path(@user_survey_report.survey_template.secure_token) %>
	    </p>
	<% end %>
	
<% else %>
  <% title "Delete #{@guest_user_survey_report.guest_user.email}" %>

	<%= form_for @guest_user_survey_report, url: delete_admin_survey_report_path(@guest_user_survey_report), html: { method: :delete } do |f| %>
	    <h3>Are you sure you want to permanently destroy survey report for  <%= @guest_user_survey_report.guest_user.email %>?</h3>
	    <p>
	      <button type="submit">Destroy</button> or <%= link_to "cancel", report_admin_survey_report_path(@guest_user_survey_report.survey_template.secure_token) %>
	    </p>
	<% end %>
<% end %>