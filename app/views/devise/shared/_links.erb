<ul class="bottom">

<%- if controller_name != 'sessions' %>
  <li><%= link_to "Log in", new_session_path(resource_name) %></li>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <li><%= link_to "Forget your password?", new_password_path(resource_name), rel: "nofollow" %></li>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <li><%= link_to "Locked out?", new_unlock_path(resource_name), rel: "nofollow" %></li>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <li><%= link_to "Resend confirm email", new_confirmation_path(resource_name), rel: "nofollow" %></li>
<% end -%>

</ul>

<p class="already">

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  Not a member yet? <%= link_to "Sign up here", new_registration_path(resource_name) %><br/>
<% end -%>

</p>